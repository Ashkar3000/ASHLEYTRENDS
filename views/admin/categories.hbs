{{>adminhead}}
<body>
    {{>adminnavbar}}
    

          <div class="container-fluid pt-3"> 
             
            <div class="col-lg-12 grid-margin stretch-card pt-3">
           
              <div class="card bg-dark">
                    
                <div class="card-body">
                  <a href="/admin/add-category" class="btn btn-outline-success btn-rounded float-end">Add-Category</a>
                  <h1 class="card-title text-center text-light">Categories</h1>
                  {{!-- <p class="card-description">
                    Add class <code>.table-dark</code>
                  </p> --}}
                  <div class="table-responsive pt-3">
                    <table class="table table-dark">
                      <thead>
                        <tr>
                          <th scope="col">
                            No.
                          </th>
                          <th scope="col">
                            Name
                          </th>
                          <th scope="col">
                            Offer
                          </th>
                         
                          <th>
                            Action
                          </th>
                        </tr>
                      </thead> 
                      <tbody>
                        {{#each category}}
                        <tr>
                          <th scope="row">
                            
                          </th>
                          <td>
                            {{this.name}}
                          </td>
                          <td>
                            {{this.discount}} %
                          </td>
                          
                          <td>
                            <a href="/admin/edit-category?category={{this._id}}" ><i class="fa-solid fa-pen-to-square" style="color: green;"></i> </a>&nbsp;&nbsp;&nbsp;&nbsp;
                            <a href="/admin/delete-category/{{this._id}}"  onclick="return confirm('Are you want to delete category {{this.name}}?')"><i class="fa-solid fa-trash" style="color: red;"></i></a>
                          </td>
                        </tr>
                        {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>  
      </div>
      <!-- main-panel ends -->

  <!-- container-scroller -->

    {{>adminjs}}
    <script>
      var table = document.getElementsByTagName('table')[0],
        rows = table.getElementsByTagName('tr'),
        text = 'textContent' in document ? 'textContent' : 'innerText';

      for (var i = 1, len = rows.length; i < len; i++) {
        rows[i].children[0][text] = i + ' ' + rows[i].children[0][text];
      }
    </script>
</body>

