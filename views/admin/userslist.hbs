{{>adminhead}}
<body>
    {{>adminnavbar}}
    

          <div class="container-fluid pt-3"> 
             
            <div class="col-lg-12 grid-margin stretch-card pt-3">
           
              <div class="card bg-dark">
                  
                <div class="card-body">
                  {{!-- <button type="button" class="btn btn-success btn-rounded float-end">Add-Products</button> --}}
                  <h1 class="card-title text-center text-light-">Users</h1>
                  {{!-- <p class="card-description">
                    Add class <code>.table-dark</code>
                  </p> --}}
                  <div class="table-responsive pt-3">
                    <table class="table table-dark">
                      <thead>
                        <tr>
                          <th>
                          No.
                          </th>
                          <th>
                            First Name
                          </th>
                           <th>
                            Last Name
                          </th>
                          <th>
                            E-Mail
                          </th>
                          <th>
                            Mobile Number
                          </th>
                          <th>
                            Action
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each users}}
                        <tr>
                          <td>
                            
                          </td>
                          <td>
                           {{this.fname}}
                          </td>
                          <td>
                           {{this.lname}}
                          </td>
                          <td>
                           {{this.email}}
                          </td>
                          <td>
                            {{this.mobilenumber}}
                          </td>
                          <td>
                            {{#if this.blocked}}
						                     <a href="/admin/unblock/{{this._id}}" class="btn btn-outline-dark">Unblock</a>
						                 {{else}}
						                   <a href="/admin/block/{{this._id}}" class="btn btn-outline-danger">Block</a>
						                {{/if}}
                            
                          </td>
                        </tr>
                        {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>  
      </div>
      <!-- main-panel ends -->

  <!-- container-scroller -->
<script>
      var table = document.getElementsByTagName('table')[0],
        rows = table.getElementsByTagName('tr'),
        text = 'textContent' in document ? 'textContent' : 'innerText';

      for (var i = 1, len = rows.length; i < len; i++) {
        rows[i].children[0][text] = i + ' ' + rows[i].children[0][text];
      }
    </script>
    {{>adminjs}}
</body>
