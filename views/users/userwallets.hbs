        <!-- Page Content  -->
      <div id="content" class="p-4 p-md-5" ><br><br><br>
        <h2 class="mb-4">My Wallets & History</h2>
        <!-- Section: Design Block -->
<section class="text-center">
    <div class="row">
            <div class="col-sm-6 mt-5" >
                <div class="card" style="border-radius: 10px; ">
                    <div class="card-head text-center"
                        style="background-color: rgb(255, 234, 47); border-radius: 10px;">
                        <h3 style="font-weight: 500;">My Wallet</h3>
                    </div>
                    <div class="card-body">
                        <h4>Current Wallet Balance : </h4>
                        <h5 style="color: rgb(255, 255, 255); font-weight:500 ; ">₹ {{wallet.[0].Amount}} /-</h5>
                    </div>
                </div>
            </div>
    </div>        
           <div class="row ">
            <div class="text-center"><h4>Wallets History</h4></div>
            <table class="table  " id="userData">
              <thead class="table-dark">
                <tr>
                  <th scope="col">From</th>
                  <th scope="col">Time</th>
                  <th scope="col">Amount Credited</th>
                </tr>
              </thead>
              <tbody>
                  {{#each walletlist}}
                        <tr>
                          <td>
                          {{this.history.From}}
                          </td>  
                          <td>
                          {{this.history.Time}}
                          </td>
                          <td>
                         ₹ {{this.history.credited}}
                          </td> 
                        </tr>
                        {{/each}}
              </tbody>
              <tfoot  class="table-dark">
                <tr>
                  <td>Grand Total</td>
                  <td></td>
                  
                  
                  <td id="sum">₹ {{wallet.[0].Amount}}</td>
                </tr>
              </tfoot>
            </table>
          </div>
          <!-- content-wrapper ends -->
        </div>



</section>
